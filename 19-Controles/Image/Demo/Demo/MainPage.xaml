<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Control Image" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <StackLayout Padding="10">
            <Image Source="xamarin_mobile_apps" HeightRequest="50" WidthRequest="50"/>

            <Image Source="giphy.gif" IsAnimationPlaying="True"/>

            <Image Source="https://recluit.com/WP-Blog/wp-content/uploads/2020/10/xamarin-movil-recluit.png" Aspect="AspectFill" HeightRequest="50" WidthRequest="50"/>

            <Image Source="https://recluit.com/WP-Blog/wp-content/uploads/2020/10/xamarin-movil-recluit.png" Aspect="AspectFit" HeightRequest="50" WidthRequest="50"/>

            <Image Source="https://recluit.com/WP-Blog/wp-content/uploads/2020/10/xamarin-movil-recluit.png" Aspect="Fill" HeightRequest="50" WidthRequest="50"/>


        </StackLayout>

    </StackLayout>

</ContentPage>
