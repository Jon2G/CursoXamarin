<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo.MainPage">

    <StackLayout Padding="20" BackgroundColor="WhiteSmoke">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Control Editor" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout Padding="20" VerticalOptions="FillAndExpand">
                <Editor Text=""/>

                <Editor Text="Entry por defecto"/>

                <Editor Text="" Placeholder="Entry con Placeholder"/>

                <Editor Text="" Placeholder="Entry con Placeholder" PlaceholderColor="Red"/>

                <Editor Text="Tamaño automático" AutoSize="TextChanges"/>

                <Editor Text="Entry con estilo personalizado" BackgroundColor="AliceBlue" TextColor="Blue"/>

                <Editor Text="Entry de solo lectura" IsReadOnly="True"/>

                <Editor Text="Entry con estilo de texto y teclado telefónico"  FontAttributes="Bold,Italic" FontSize="30" Keyboard="Telephone"/>

            </StackLayout>
        </ScrollView>


    </StackLayout>

</ContentPage>
