<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:demo="clr-namespace:Demo;assembly=Demo"
             x:Class="Demo.MainPage"
             x:DataType="demo:MainPage">

    <StackLayout Padding="20" BackgroundColor="WhiteSmoke">
        <Slider />

        <Slider Maximum="100" Minimum="0"  />

        <Slider Maximum="100" Minimum="50"   />

        <Slider Minimum="0" Maximum="1" Value="0.5"   ThumbColor="Blue" MinimumTrackColor="Green" MaximumTrackColor="Red"/>

        <Slider ThumbColor="Blue" Value="{Binding Valor}" MinimumTrackColor="Green" MaximumTrackColor="Red"/>

        <StackLayout Orientation="Horizontal">
            <Label Text="Valor del slider:"/>
            <Label Text="{Binding Valor}"/>
        </StackLayout>


    </StackLayout>

</ContentPage>
