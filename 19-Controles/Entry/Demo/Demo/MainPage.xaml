<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Control Entry" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <StackLayout Padding="20">
            <Entry Text=""/>

            <Entry Text="Entry por defecto"/>

            <Entry Text="" Placeholder="Entry con Placeholder"/>

            <Entry Text="" Placeholder="Entry con Placeholder" PlaceholderColor="Red"/>

            <Entry Text="Campo de contraseña" IsPassword="True"/>

            <Entry Text="Entry con estilo personalizado" BackgroundColor="AliceBlue" TextColor="Blue"/>

            <Entry Text="Entry de solo lectura" IsReadOnly="True"/>

            <Entry Text="Entry con estilo de texto" FontAttributes="Bold,Italic" FontSize="30"/>

        </StackLayout>

    </StackLayout>

</ContentPage>
