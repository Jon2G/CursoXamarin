<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Control Webview" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout Padding="20" BackgroundColor="WhiteSmoke">

            <WebView Source="https://www.ipn.mx" HeightRequest="100" WidthRequest="500" HorizontalOptions="Center" VerticalOptions="Center"/>

            <WebView BackgroundColor="AliceBlue" Source="https://www.ipn.mx" HeightRequest="500" WidthRequest="500" HorizontalOptions="Center" VerticalOptions="Center"/>

            
        </StackLayout>
    </StackLayout>

</ContentPage>
