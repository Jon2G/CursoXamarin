<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Control BoxView" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <StackLayout Padding="20">
            <BoxView HeightRequest="50" Color="Gray"/>

            <BoxView HeightRequest="50" WidthRequest="100" Color="Red"/>

            <BoxView HeightRequest="50" WidthRequest="50" HorizontalOptions="Start" Color="Green"/>

            <BoxView HeightRequest="50" WidthRequest="50" HorizontalOptions="Center" Color="Purple"/>

            <BoxView HeightRequest="50" WidthRequest="50" HorizontalOptions="End" Color="Pink"/>

            <BoxView WidthRequest="50" HorizontalOptions="FillAndExpand" Color="SpringGreen"/>

            <BoxView WidthRequest="50" HorizontalOptions="FillAndExpand" CornerRadius="10" Color="Blue"/>
        </StackLayout>


    </StackLayout>

</ContentPage>
