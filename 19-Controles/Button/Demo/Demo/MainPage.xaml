<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo.MainPage">

    <StackLayout Padding="20">
        <Button Text="Botón tradicional"/>

        <Button Text="Boton con borde" BorderWidth="10" BorderColor="Black"/>

        <Button Text="Borde redondeado" CornerRadius="10"/>

        <Button Text="Botón por comando" Command="{Binding Command}"/>

        <Button Text="Botón por evento click" Clicked="Button_Clicked"/>

    </StackLayout>

</ContentPage>
